{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                           
    "lib": [
      "es6",
      "DOM"
    ],                                   
    "allowJs": true,                           
    "outDir": "./dist",                            
    "rootDir": ".",                           
    "removeComments": true,                    
    "strict": false,                               
    "baseUrl": ".",                           
    "paths": {
      "@controllers/*": ["./src/controllers/*"]
    },                               
    "esModuleInterop": true,                      
    "resolveJsonModule": true,
    "experimentalDecorators": true,            
    "emitDecoratorMetadata": true,             
    "skipLibCheck": true,                         
    "forceConsistentCasingInFileNames": true      
  },
  "include": ["src/**/*", "__tests__*/*"]
}
